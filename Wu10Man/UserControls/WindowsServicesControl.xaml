<UserControl x:Class="WereDev.Utils.Wu10Man.UserControls.WindowsServicesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WereDev.Utils.Wu10Man.Converters"
             xmlns:wpfspark="clr-namespace:WPFSpark;assembly=WPFSpark"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="300"
             >

    <Grid>
        <Grid.Resources>
            <local:BooleanToEnabledDisabledConverter x:Key="BoolToEnabledConverter"/>
        </Grid.Resources>
        <Label Content="Windows Services" HorizontalAlignment="Center" VerticalAlignment="Top" ClipToBounds="True"/>
        <Label Content="Windows Update Service:" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" />
        <!--<Label Content="{Binding Path=IsUpdateServiceEnabled, Converter={StaticResource BoolToEnabledConverter}}" HorizontalAlignment="Right" Margin="0,30,0,0" VerticalAlignment="Top" />-->
        <wpfspark:ToggleSwitch IsChecked="{Binding IsUpdateServiceEnabled}" CheckedToolTip="Service Enabled" UncheckedToolTip="Service Disabled" Width="40" Height="20" MinWidth="40" MinHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,0,0" Click="tglWindowsUpdate_Click"  />
        <Label Content="Windows Modules Installer:" HorizontalAlignment="Left" Margin="0,90,0,0" VerticalAlignment="Top" />
        <!--<Label Content="{Binding Path=IsModulesInstallerServiceEnabled, Converter={StaticResource BoolToEnabledConverter}}" HorizontalAlignment="Right" Margin="0,75,0,0" VerticalAlignment="Top" />-->
        <wpfspark:ToggleSwitch IsChecked="{Binding IsModulesInstallerServiceEnabled}" CheckedToolTip="Service Enabled" UncheckedToolTip="Service Disabled" Width="40" Height="20" MinWidth="40" MinHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,95,0,0" Click="tglModulesInstaller_Click" />
    </Grid>
</UserControl>
