<UserControl x:Class="WereDev.Utils.Wu10Man.UserControls.ProgressBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WereDev.Utils.Wu10Man.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Black" Opacity=".5"></Grid>
        <ProgressBar Name="ProgressBarStatus" Minimum="{Binding MinValue}" Maximum="{Binding MaxValue}" Value="{Binding CurrentValue}" Opacity="1"
                     Height="20" Width="250"/>
    </Grid>
</UserControl>
